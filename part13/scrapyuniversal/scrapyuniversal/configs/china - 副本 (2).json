{
    "spider": "universal",
    "website": "中华网科技",
    "type": "新闻",
    "index": "http://tech.china.com/",
    "settings": {
        "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36"
    },
    "start_urls": {
        "type": "static",
        "value": [
            "https://tech.china.com/articles/"
        ]
    },
    "allow_domains": [
        "tech.china.com"
    ],
    "rules": "china",
    "item": {
        "class": "NewItem",
        "loader": "ChinaLoader",
        "attrs": {
            "title": [
                {
                    "method": "xpath",
                    "args": [
                        "//h1[@id='chan_newsTitle']/text()"
                    ]
                }
            ],
            "url": [
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "text": [
                {
                    "method": "xpath",
                    "args": [
                        "//div[@id='chan_newsDetail']//text()"
                    ]
                }
            ],
            "datetime": [
                {
                    "method": "xpath",
                    "args": [
                        "//span[@class='time']/text()"
                    ],
                    "re":  "\\d+-\\d+-\\d+\\s\\d+:\\d+:\\d+"
                }
            ],
            "source": [
                {
                    "method": "xpath",
                    "args": [
                        "//span[@class='source']/text()"
                    ],
                    "re":  "来源：(.*)"
                }
            ],
            "website": [
                {
                    "method": "value",
                    "args": [
                        "中华网"
                    ]
                }
            ]
        }
    }
}